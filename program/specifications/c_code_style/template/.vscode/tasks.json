{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "clang",  // 使用 g++ 编译器，依据需要更改为 clang++
            "args": [
                "-g",  // 生成调试信息
                "${workspaceFolder}\\src\\*.c",  // 源文件路径
                "-o",
                "${workspaceFolder}\\build\\template"  // 输出可执行文件路径
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "detail": "Generated by your task configuration"
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "rm",
            "args": [
                "-rf",
                "${workspaceFolder}/build/*"  // 清理输出目录
            ],
            "group": "build",
            "problemMatcher": []
        }
    ]
}
