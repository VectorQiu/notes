{
    "C_Cpp.default.compilerPath": "C:\\Program Files\\LLVM\\bin\\clang.exe",
    "files.associations": {
        "generl_rules.h": "c",
        "stdint.h": "c",
        "stddef.h": "c",
        "stdio.h": "c",
        "string.h": "c",
        "ctype.h": "c"
    },
    //
    "editor.fontSize": 16,
    "terminal.integrated.fontSize": 14,
    "[Log]": {
        "editor.fontSize": 14
    },
    "editor.fontFamily": "Fira Code",
    "editor.fontLigatures": true,
    "files.autoSave": "afterDelay",
    "editor.formatOnSave": true,
    "editor.formatOnPaste": true,
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.renderWhitespace": "all",
    "files.exclude": {
        "somefolder/": true,
        "somefile": true
    },
    "search.exclude": {
        "someFolder/": true,
        "somefile": true
    },
    "json.schemas": [
        {
            "fileMatch": [
                "bower.json"
            ],
            "url": "https://json.schemastore.org/bower"
        }
    ],
    "editor.rulers": [
        80
    ],
    // doxygen
    "C_Cpp.doxygen.generatedStyle": "/**",
    "doxdocgen.cpp.tparamTemplate": "\\tparam          {param} ",
    "doxdocgen.file.fileTemplate": "\\file            {name}",
    "doxdocgen.generic.briefTemplate": "\\brief           {text}",
    "doxdocgen.generic.dateTemplate": "\\date            {date}",
    "doxdocgen.generic.paramTemplate": "\\param[in]       {param}: ",
    "doxdocgen.generic.returnTemplate": "\\return          {type} ",
    "doxdocgen.file.versionTag": "\\version         0.0.1",
    "doxdocgen.generic.useGitUserEmail": true,
    "doxdocgen.generic.useGitUserName": true,
    "doxdocgen.generic.commandSuggestionAddPrefix": true,
    "doxdocgen.generic.authorTag": "\\author          {author} ({email})",
    "doxdocgen.generic.customTags": [],
    // conventionalCommits
    "conventionalCommits.scopes": [
        "readme",
        "test",
        "script",
        "docs",
        "cmake",
        "build",
        "vscode",
        "calculator",
        "stack",
    ],
}